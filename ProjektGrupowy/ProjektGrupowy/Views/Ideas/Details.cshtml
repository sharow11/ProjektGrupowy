@model CTS.Idea

@{
    ViewBag.Title = Model.Title + " - details";
}

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>

    <hr />
    <div>
        <div>
            <table>
                <tr>
                    <td>
                        <a href='@Url.Action("UpVote", "Ideas", new {id = Model.Id})'>
                            <img src='@Url.Content("~/Images/up_arrow.png")' alt="Up vote"/>
                        </a>
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href='@Url.Action("DownVote", "Ideas", new {id = Model.Id})'>
                            <img src='@Url.Content("~/Images/down_arrow.png")' alt="Down vote"/>
                        </a>
                    </td>
                </tr>
            </table>
        </div>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Score)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Score)
                </dd>
            </dl>
        </div>

    </div>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
